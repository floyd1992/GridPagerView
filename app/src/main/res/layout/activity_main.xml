<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#cacaca">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content">

        <Button
            android:id="@+id/add_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="数据集+"/>

        <Button
            android:id="@+id/del_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="数据集-"/>

    </LinearLayout>

    <com.jyqqhw.gridpagerview.GridPagerView
        android:layout_centerInParent="true"
        android:id="@+id/simple_grid_view"
        android:layout_width="490dp"
        android:layout_height="347dp"
        android:background="#0a0"
    >
    </com.jyqqhw.gridpagerview.GridPagerView>

    <com.jyqqhw.gridpagerview.indicator.GridPagerIndicator
        android:id="@+id/simple_indicator"
        android:layout_width="490dp"
        android:layout_height="30dp"
        android:layout_below="@id/simple_grid_view"
        android:layout_alignLeft="@id/simple_grid_view"
        android:background="#dd0"/>

</RelativeLayout>
